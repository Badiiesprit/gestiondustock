{% extends '@PrestaShop/Admin/layout.html.twig' %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
{% block content %}
<div class="row">
    <div class="col-md-12">
        {% for flashMessage in app.flashes('success') %}
            <div class="alert alert-danger d-print-none" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true"><i class="material-icons">close</i></span>
                </button>
                <div class="alert-text">
                    <p>{{ flashMessage }}</p>
                </div>
            </div>
        {% endfor %}
        {% for flashMessage in app.flashes('danger') %}
        <div class="alert alert-danger d-print-none" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true"><i class="material-icons">close</i></span>
            </button>
            <div class="alert-text">
                <p>{{ flashMessage }}</p>
            </div>
        </div>
        {% endfor %}
        <div class="card">
            <h3 class="card-header">
                <i class="material-icons">store</i> {% if addMagasins %}Ajouter{% else %}Update {% endif %}Magasin :
            </h3>
            <div class="card-block">
                <div class="card-text">
                   {{ form_start(magasinForm, { 'attr': {'id': 'magasinForm'}}) }}
                    	<div class="pt-2 mb-2">
                        	<div class="form-group row">
                            	{{ form_label(magasinForm.nom, null,  { 'label_attr': {'class': 'col-5 col-sm-5'} }) }}
                            	<div class="col-7">
                                	{{ form_widget(magasinForm.nom) }}
                                	{{ form_errors(magasinForm.nom) }}
                            	</div>
                        	</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-5">
                            </div>
                            <div class="col-7" style="text-align: end;">
                                <button class="btn btn-primary">{{ 'Save'|trans({}, 'Admin.Actions') }}</button>
                            </div>
                        </div>
                    {{ form_end(magasinForm) }}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}